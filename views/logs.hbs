<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Logs - Lab Tech Dashboard</title>
    
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/styleguide.css">
    <link rel="stylesheet" href="css/logs.css">
</head>

<body>
    <!-- Header -->
    <header class="header-lab">
        <div class="logo-container">
            <img src="images/LabyrinthLogo.png" alt="Labyrinth Logo" onclick="window.location.href='/labtech'">
        </div>
        <div class="labyrinthHeader">Labyrinth - System Logs</div>
        <div class="profile-dropdown">
            <img class="profile-icon" src="{{userData.profile_picture}}" alt="Profile" id="profileDropdownBtn">
            <div class="dropdown-menu" id="profileDropdown">
                <a href="/profile">Go to Profile</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="logs-container">
        <div class="page-header">
            <h1 class="page-title">System Activity Logs</h1>
            <p class="page-subtitle">Monitor all reservation activities and user actions</p>
            <button class="back-button" onclick="window.location.href='/labtech'">‚Üê Back to Dashboard</button>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <h3 class="filter-title">Filter Logs</h3>
            <div class="filter-row">
                <div class="filter-group">
                    <label for="dateFrom">From Date:</label>
                    <input type="date" id="dateFrom">
                </div>
                <div class="filter-group">
                    <label for="dateTo">To Date:</label>
                    <input type="date" id="dateTo">
                </div>
                <div class="filter-group">
                    <label for="actionFilter">Action Type:</label>
                    <select id="actionFilter">
                        <option value="">All Actions</option>
                        {{#each actionsForFilter}}
                            <option value="{{this.value}}">{{this.label}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="filter-group">
                    <label for="userFilter">User:</label>
                    <input type="text" id="userFilter" placeholder="Enter username or email">
                </div>
                <button class="filter-button" onclick="applyFilters()">Apply Filters</button>
                <button class="clear-button" onclick="clearFilters()">Clear</button>
            </div>
        </div>

        <!-- Logs Table -->
        <div class="logs-section">
            <div class="logs-header">Activity Log History</div>
            <div class="logs-table-container">
                <table class="logs-table" id="logsTable">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Action</th>
                            <th>User</th>
                            <th>Room</th>
                            <th>Seat</th>
                            <th>Date/Time</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody id="logsTableBody">
                    {{#each logs}}
                        <tr>
                        <td>{{formattedTimestamp}}</td>
                        <td><span class="log-level {{logClass action}}">{{action}}</span></td>
                        <td>{{user}}</td>
                        <td>{{room}}</td>
                        <td>{{seat}}</td>
                        <td>{{datetime}}</td>
                        <td>{{details}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="js/common.js"></script>
    <script src="js/logs.js"></script>
</body>
</html>